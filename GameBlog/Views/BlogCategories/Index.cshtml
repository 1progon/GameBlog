@model GameBlog.ViewModel.Blog.BlogCategoryIndexViewModel

@section metaTitle {Все категории в Блоге}

@section metaDesc {Выбирайте категорию в блоге и читайте последние новости из мира туризма от компании Нано Тревел}

@section metaKeys {блог о туризме, категории в блоге о туризме, записи о туризме, какие новости о туризме почитать}

<div class="container">
    <h2>Список всех категорий блога</h2>

    <div class="simple-listing">
        @foreach (var category in Model.BlogCategories)
        {
            <a asp-controller="BlogCategories"
               asp-action="Show"
               asp-route-slug="@category.Slug">
                <div class="simple-listing-item">
                    @category.Name
                </div>
            </a>
        }
    </div>

    <vc:pagination pagination="@Model.Pagination"/>
</div>